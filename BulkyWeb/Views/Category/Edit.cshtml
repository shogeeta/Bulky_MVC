@* @using Bulky.Models.Models *@
@model Category

<form method="post">
    @* <input asp-for="Id" hidden /> this is needed when Id is saved with any custom name rather then id *@
    <div class="border p-3 mt-4 text-bg-dark">
        <div class="row pb-2">
            <h2 class="text-light"> Edit Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div> *@
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div asp-validation-summary="None"></div>
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row mb-3  p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-light form-control">Update</button>
            </div>
            <div class="col-6  col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn text-light btn-link  form-control">Back to list</a>
            </div>
        </div>
        @* <partial name="_ValidationScriptsPartial" /> if it is not a script then we could have added here *@

    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}